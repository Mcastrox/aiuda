<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Name" value="<%= task.title %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="origen" cols="80"
                placeholder="Add Origin"
                ><%= task.origen %></textarea>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="fecha" placeholder="Date" value="<%= task.fecha %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="asueto" placeholder="freeday" value="<%= task.asueto %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="duracion" placeholder="duration" value="<%= task.duracion %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>
