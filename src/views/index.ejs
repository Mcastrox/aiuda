<% include partials/_header %>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="name">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="origen" cols="80"
                placeholder="Add a origin"
                ></textarea>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="duracion" cols="80"
                placeholder="duration"
                ></textarea>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="fecha" cols="80"
                placeholder="date"
                ></textarea>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="asueto" cols="80"
                placeholder="freeday?"
                ></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Name</th>
            <th>Origin</th>
            <th>Date</th>
            <th>Asueto</th>
            <th>Duration</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].title %></strong></td>
              <td><%= tasks[i].origen %></td>
              <td><%= tasks[i].fecha %></td>
              <td><%= tasks[i].asueto %></td>
              <td><%= tasks[i].duracion %></td>
              <td>
                <a
                  class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/turn/<%= tasks[i]._id %>">Foretime</a>
                <a href="/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>




